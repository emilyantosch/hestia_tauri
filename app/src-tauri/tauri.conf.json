{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hestia_tauri",
  "version": "0.1.0",
  "identifier": "com.hestia.app",
  "build": {
    "beforeDevCommand": "deno task dev",
    "beforeBuildCommand": "deno task build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "hestia_tauri",
        "width": 1200,
        "height": 800,
        "minWidth": 400,
        "minHeight": 300,
        "maxWidth": 2560,
        "maxHeight": 1440,
        "center": true,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
